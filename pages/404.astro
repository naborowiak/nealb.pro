---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <main class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold gradient-text mb-4">404</h1>
      <p class="text-xl text-gray-400 mb-8">Page not found</p>
      <a 
        href="/" 
        class="px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full text-white font-bold hover:from-purple-700 hover:to-pink-700 transition-colors"
      >
        Go Home
      </a>
    </div>
  </main>
</Layout>
