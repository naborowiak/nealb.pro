---
// Remove unused Image import since we're not using images in this component
---

<section id="contact" class="py-20 relative">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-t from-[#020817] via-purple-900/10 to-[#020817] opacity-30"></div>
  </div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-8">
        Let's <span class="gradient-text">Connect</span>
      </h2>
      <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        Have a project in mind or want to collaborate? I'm always open to discussing new opportunities and ideas.
      </p>

      <div class="grid md:grid-cols-5 gap-8">
        <div class="md:col-span-2 space-y-6">
          <div class="bg-white/5 rounded-lg p-6 backdrop-blur-sm">
            <h3 class="text-xl font-semibold mb-4">Contact Info</h3>
            <ul class="space-y-4">
              <li class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href="mailto:contact@nealb.pro" class="text-gray-300 hover:text-white transition-colors">
                  contact@nealb.pro
                </a>
              </li>
              <li class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-gray-300">Remote / Worldwide</span>
              </li>
            </ul>

            <div class="mt-8">
              <h3 class="text-xl font-semibold mb-4">Connect</h3>
              <div class="flex space-x-4">
                <a href="https://github.com/naborowiak" target="_blank" rel="noopener noreferrer"
                   class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                  </svg>
                </a>
                <a href="#" target="_blank" rel="noopener noreferrer"
                   class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <form 
          class="md:col-span-3 space-y-6 bg-white/5 p-8 rounded-lg backdrop-blur-sm"
          id="contact-form"
        >
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-white/10 border border-gray-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors text-white"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white/10 border border-gray-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors text-white"
              />
            </div>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-white/10 border border-gray-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors text-white"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg text-white font-bold hover:from-purple-700 hover:to-pink-700 transition-all hover:scale-[1.02]"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form");
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    
    try {
      // Replace with your form handling service (e.g., Formspree, GetForm, etc.)
      const response = await fetch("https://formspree.io/f/your-form-id", {
        method: "POST",
        body: formData,
        headers: {
          "Accept": "application/json"
        }
      });
      
      if (response.ok) {
        alert("Message sent successfully!");
        form.reset();
      } else {
        throw new Error("Failed to send message");
      }
    } catch (error) {
      alert("Failed to send message. Please try again.");
    }
  });

  // Add floating label animation
  const inputs = document.querySelectorAll("input, textarea");
  inputs.forEach(input => {
    input.addEventListener("focus", () => {
      input.parentElement?.classList.add("focused");
    });
    
    input.addEventListener("blur", () => {
      if (!input.value) {
        input.parentElement?.classList.remove("focused");
      }
    });
  });
</script>

<style>
  input, textarea {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: theme("colors.purple.500");
  }

  .focused label {
    transform: translateY(-1.5rem);
    font-size: 0.875rem;
    color: theme("colors.purple.400");
  }
</style>
